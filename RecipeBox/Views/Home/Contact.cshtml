@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<!-- content -->
<div id="content">
    <div class="container">
        <div class="block">
            <div class="row">
                <div class="col-sm-6">
                    <form id="contact-form" action="#">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <textarea rows="15" class="form-control" placeholder="Message"></textarea>
                        </div>
                        <input type="button" class="btn btn-primary" value="Send Message">
                    </form>
                </div>
                <div class="col-sm-6">
                    <h3 class="block-title sub-title">
                        <span>Other Ways To Get In Touch</span>
                    </h3>
                    <p><abbr title="Email">E</abbr>: support@recipeapp.me</p>
                </div>
            </div>
        </div>
    </div>
</div>