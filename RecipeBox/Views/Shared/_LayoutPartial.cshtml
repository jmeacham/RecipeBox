<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>Recipe Box</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <link href="~/Content/theme/Enkel/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/theme/Enkel/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/theme/Enkel/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/theme/Enkel/css/theme-style.css" rel="stylesheet">
    <link href="~/Content/theme/Enkel/css/custom-style.css" rel="stylesheet">
    <link href="~/Content/theme/Enkel/css/colour-green.css" rel="stylesheet" id="colour-scheme">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="plugins/html5shiv/dist/html5shiv.js"></script>
    <script src="plugins/respond/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="~/favicon.png">
    <link href='http://fonts.googleapis.com/css?family=Monda:400,700' rel='stylesheet' type='text/css'>
</head>
<body class="has-navbar-fixed-top page-index-carousel">
    <div id="navigation" class="wrapper">
        <div class="navbar navbar-fixed-top" id="top">
            <div class="navbar-inner">
                <div class="inner">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle btn btn-navbar" data-toggle="collapse" data-target=".navbar-collapse"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                            <a class="navbar-brand" href="@Url.Action("Index","Home")" title="Home">
                                <h1>Recipe Box</h1>
                                <span>Online recipe storage</span>
                            </a>
                        </div>
                          <div class="collapse navbar-collapse">
                            <ul class="nav navbar-right" id="main-menu">
                                <li><a href="@Url.Action("Index", "Recipes")">My Recipes</a></li>
                                <li><a href="@Url.Action("About", "Home")">About</a></li>
                                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                        <!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Highlighted -->
    <div id="highlighted">
        <div class="container">
            <div class="header">
                <h2 class="page-title">
                    <span>@ViewBag.Title</span>
                </h2>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <!--Scripts -->
    <script src="~/Content/theme/Enkel/js/jquery.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Bootstrap Javascript -->
    <script src="~/Content/theme/Enkel/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/theme/Enkel/js/script.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
