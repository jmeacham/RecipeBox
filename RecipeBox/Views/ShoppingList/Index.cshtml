@model RecipeBox.Models.Recipe
@{
    ViewBag.Title = "Shopping List";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div id="printableText">
            <h3>@Html.DisplayFor(model => model.Title)</h3>
            <ul class="multiline no-decoration">
                <li>
                    @Html.DisplayFor(model => model.Ingredients)
                </li>
            </ul>
        </div>
        <p><a href="@Url.Action("Index","Recipes")" class="btn btn-md btn-success">Back to Recipes</a> | <a onclick="printPage('printableText')" class="btn btn-md btn-success">Print</a></p>

    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function printPage(printableText) {
            var printContents = document.getElementById(printableText).innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;

            window.print();

            document.body.innerHTML = originalContents;
        }
    </script>
}